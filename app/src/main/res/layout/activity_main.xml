<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:accessibilityHeading="false"
    android:background="@drawable/main"
    android:textAlignment="center"
    tools:context=".MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edittext1"
                    android:layout_width="409dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Name Your Occasion"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="256dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:text="Select the mode of the occasion"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.414" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="50dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonOF"
                            android:layout_width="150dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginBottom="310dp"
                            android:background="#3C4EBF"
                            android:text="Offline"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="339dp" />

                        <RadioButton
                            android:id="@+id/radioButton2ON"
                            android:layout_width="150dp"
                            android:layout_height="44dp"
                            android:layout_marginBottom="491dp"
                            android:background="#3C4EBF"
                            android:text="Online"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="99dp"
                            tools:layout_editor_absoluteY="339dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="3dp"
                    android:text="Platform"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.718" />


                <Spinner
                    android:id="@+id/Platforms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="50dp"
                    android:background="#3C4EBF"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="561dp" />

                <Button
                    android:id="@+id/viewlocations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="#EAB0C3"
                    android:text="View Locations"
                    android:layout_marginLeft="120dp"

                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.719"
                    app:strokeColor="#FEE4B3" />

                <Button
                    android:id="@+id/venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="#EAB0C3"
                    android:text="Venue"
                    android:layout_marginLeft="170dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.719"
                    app:strokeColor="#FEE4B3" />

                <TextView
                    android:id="@+id/editvenue"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="147dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="50dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="256dp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#EAB0C3"
            android:text="Date"
            app:strokeColor="#FEE4B3"
            tools:layout_editor_absoluteX="-13dp"
            tools:layout_editor_absoluteY="625dp" />

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:outlineSpotShadowColor="#FFFFFF"
                    android:selectedWeekBackgroundColor="#FFFFFF"
                    android:unfocusedMonthDateColor="#FFFFFF"
                    android:weekNumberColor="#F6F6F6"
                    android:weekSeparatorLineColor="#FBF8F8"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="273dp" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentBottom="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />



                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true">
                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#AE93D9"
                            android:layout_weight="1" android:text="CREATE">
                        </Button>
                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#AE93D9"
                            android:text="PROFILE">
                        </Button>
                </LinearLayout>
        </LinearLayout>

    </ScrollView>